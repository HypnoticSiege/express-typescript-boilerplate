<%- include('partials/header') %>
    <h1 class="text-6xl font-bold text-center pt-10 hover:text-sky-400 duration-300">Express JS w/ TS Boilerplate</h1>
    <h2 class="text-2xl font-bold text-center hover:text-purple-600 duration-300">Made by Luis Quezada</h2>

    <div class="w-50 mx-auto mt-5">
        <div class="stats shadow">

            <div class="stat">
                <div class="stat-figure text-yellow-300">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
        </svg>
                </div>
                <div class="stat-title">Total Stars</div>
                <div class="stat-value text-yellow-300">
                    <%= stars %>
                </div>
                <div class="stat-desc">
                    Wow! That's a lot of stars!
                </div>
            </div>

            <div class="stat">
                <div class="stat-figure text-blue-500">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
                </div>
                <div class="stat-title">Made with</div>
                <div class="stat-value text-blue-500">
                    <%= language %>
                </div>
                <div class="stat-desc">
                    Blazingly fast & easy to use
                </div>
            </div>

            <div class="stat">
                <div class="stat-figure text-secondary">
                    <div class="avatar <%= status %>">
                        <div class="w-16 rounded-full">
                            <img src="<%= owner.avatar_url %>" />
                        </div>
                    </div>
                </div>
                <div class="stat-value">
                    <%= issues %>
                </div>
                <div class="stat-title">
                    Current Issues
                </div>
                <div class="stat-desc text-rose-600">With
                    <%= watchers %> watchers.</div>
            </div>

        </div>
    </div>
    <%- include('partials/footer') %>